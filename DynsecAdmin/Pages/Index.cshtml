@page "{handler?}"
@model DynsecAdmin.Pages.IndexModel
@{
    ViewData["Title"] = "Default";
}
<h1>Default</h1>
<form method="post" asp-page-handler="SetAnonGroup" class="mb-3">
    <div class="mb-3">
        <label asp-for="AnonymousGroup"></label>
        <select asp-for="AnonymousGroup" asp-items="Model.AvailableGroups" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<form method="post" asp-page-handler="SetDefaultAcl">
    <div class="mb-3">
        <input class="form-check-input" type="checkbox" asp-for="PublishClientSend" />
        <label asp-for="PublishClientSend"></label>
    </div>
    <div class="mb-3">
        <input class="form-check-input" type="checkbox" asp-for="PublishClientReceive" />
        <label asp-for="PublishClientReceive"></label>
    </div>
    <div class="mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Subscribe" />
        <label asp-for="Subscribe"></label>
    </div>
    <div class="mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Unsubscribe" />
        <label asp-for="Unsubscribe"></label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>